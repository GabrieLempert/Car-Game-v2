<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bacground_for_game">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/car_and_racing_flags_icon" />

    <Button
        android:id="@+id/easy_game_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_margin="40dp"
        android:theme="@style/Widget.AppCompat.Button"
        android:text="Easy Game"
        android:textAlignment="center" />

    <Button
        android:id="@+id/hard_game_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="HARD GAME" />

    <Button
        android:id="@+id/scores_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="SCORE LIST" />




</LinearLayout>